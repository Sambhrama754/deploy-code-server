{
  "scripts": {
    "cli:format": "prettier --config ./cli/.prettierrc --ignore-path ./cli/.prettierignore --write ./cli",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2"
  },
  "lint-staged": {
    "./cli/*.{js,css,md}": "yarn cli:format"
  }
}
